<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<application xmlns="http://ns.adobe.com/air/application/1.5">
	<id>PicView</id>
	<filename>PicView</filename>
	<name>PicView</name>
	<version>0.0.1</version>
	<description>Tiny and simple image viewer</description>
	<copyright></copyright>
	<initialWindow>
		<content>src/index.html</content>
		<title>PicView</title>
		<systemChrome>standard</systemChrome>
		<transparent>false</transparent>
		<visible>false</visible>
		<minimizable>true</minimizable>
		<maximizable>false</maximizable>
		<resizable>false</resizable>
		
		<!-- 
		<x>20</x>
		<y>20</y>
		 -->
		<width>300</width>
		<height>300</height>
	</initialWindow>
	
<!--
	<icon>
		<image16x16>src/icon/icon-16x16.png</image16x16>
		<image32x32>src/icon/icon-32x32.png</image32x32>
		<image48x48>src/icon/icon-48x48.png</image48x48>
	</icon>
-->

	<allowBrowserInvocation>true</allowBrowserInvocation>
	
	<fileTypes>
		<fileType>
			<name>picview.jpeg</name>
			<extension>jpg</extension>
			<description></description>
			<contentType>image/jpeg</contentType>
		</fileType>
	</fileTypes>
</application>